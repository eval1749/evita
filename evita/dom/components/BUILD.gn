  sources = [
    "components_test.cc",
    "repl/console_unittest.cc",
  ]

  data = [
    "highlights/highlights_test.js",
    "imaging/imaging_test.js",
    "modes/modes_test.js",
    "win_resource/win_resource_test.js",
  ]

  public_deps = [
    "//evita/dom/testing:test_support",
  ]
}
