config("parser_implementation") {
  defines = [ "JOANA_PARSER_IMPLEMENTATION" ]
}

source_set("parser") {
  sources = [
    "parser.cc",
    "parser.h",
    "parser_declarations.cc",
    "parser_expressions.cc",
    "parser_statements.cc",
  ]
  public_deps = [
    "//joana/ast",
    "//joana/base",
    "//joana/parser/lexer",
    "//joana/parser/utils",
  ]

  configs += [ ":parser_implementation" ]
}

source_set("test_files") {
  testonly = true
  sources = [
    "lexer/lexer_test.cc",
    "parser_test.cc",
    "simple_error_sink.cc",
    "simple_error_sink.h",
    "simple_formatter.cc",
    "simple_formatter.h",
  ]
  deps = [
    ":parser",
    "//joana/parser/jsdoc:test_files",
    "//joana/parser/public",
    "//testing/gtest",
  ]
}
