[Constructor()]
interface CSSStyleSheetHandle {
  static void appendStyleRule(CSSStyleSheetHandle handle, DOMString selectorText,
                         Map rawStyle);
  static long countRules(CSSStyleSheetHandle handle);
  static void deleteRule(CSSStyleSheetHandle handle, long index);

  // |Map| contains "internal" CSS property id and string representation of
  // CSS value. Key -1 have selector text.
  static Map ruleAt(CSSStyleSheetHandle handle, long index);

  static void insertStyleRule(CSSStyleSheetHandle handle, DOMString selectorText,
                         Map rawStyle, long index);
};
