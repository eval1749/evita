import("//evita/build/js_library.gni")

js_library("components") {
  sources = [
    "${target_out_dir}/dynamic_abbrev/dynamic_abbrev.jsobj",
    "${target_out_dir}/find_and_replace/find_and_replace.jsobj",
    "${target_out_dir}/launchpad/launchpad.jsobj",
    "${target_out_dir}/modes/modes.jsobj",
    "${target_out_dir}/spell_checker/spell_checker.jsobj",
